<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Your Stuff</title>
</head>
<body>
    <section>
        <h1>This is a page to edit items. Don't fuck up, bruh.</h1>
        <section>
            <ul>
                <% itemList.forEach(item => { %>
                    <li>
                        <% if (item._id == idItem ) { %>
                        <form action="/edit/update/<%= item._id%>" method="POST">
                            <label for="textinput">Input Text</label>
                            <input type="text" name = "textinput" value="<%= item.textinput%>">
                            <label for="numinput">Input Number</label>
                            <input type="number" name = "numinput" value = "<%= item.numinput%>">
                            <button type="submit">Confirm</button>
                            <a href="/">Cancel</a>
                        </form>
                    </li>
                    <% } else { %>
                        <li>
                            <div><%= item.textinput %></div>
                            <div><%= item.numinput %></div>
                            <a href="edit/<%= item._id %>">Edit</a>
                            <a href="edit/remove/<%= item._id %>">Remove</a>
                        </li>
                        <% } %>
                <% }) %>
            </ul>
            </ul>
        </section>
    </section>
</body>
</html>